@page "/products"
@inject IProductService ProductService
@attribute [StreamRendering(true)]

<CheckLogin PageToRedirect="products" />

<h3>ProductList</h3>

@if (products == null)
{
	<span>Loading...</span>	
}
else if (products.Count == 0)
{
	<span>No games found.</span>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>#ID</th>
				<th>Name</th>
				<th>Date</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var game in products)
			{
				<tr>
					<td>@game.Id</td>
					<td>@game.Name</td>
					<td>@game.CreatedAt.ToString("dd MMM yyyy")</td>
					<td>
						<GameButtonCaller SIDChange="UPDATE" Id="@game.Id" />
						<GameButtonCaller SIDChange="DELETE" Id="@game.Id" />
					</td>
				</tr>
			}
		</tbody>
	</table>
}

<div class="add-btn">
	<GameButtonCaller SIDChange="CREATE" Id="-1" />
</div>
}

@code {
	List<Product>? products = null;

	protected override async Task OnInitializedAsync()
	{
		products = await ProductService.GetAllProducts();
	}
}